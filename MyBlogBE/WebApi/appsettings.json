{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "YourConnectionStringHere"
  },
  "BaseSettings": {
    "TokenLength": 10,
    "TokenExpiryMinutes": 30,
    "SelfRemoveDurationDays": 30,
    "FrontendUrl": "http://localhost:5173",
    "ChromeExtensionUrl": "chrome-extension://your-extension-id-here",
    "JwtSettings": {
      "Key": "YourSuperSecretKeyHere",
      "Issuer": "MyBlogAPI",
      "Audience": "MyBlogClient",
      "AccessTokenDurationMinutes": 60,
      "RefreshTokenDurationDays": 15
    },
    "EmailSettings": {
      "SmtpServer": "smtp.gmail.com",
      "Port": 587,
      "SenderName": "MyBlog Admin",
      "SenderEmail": "your-email@example.com",
      "Username": "your-email@example.com",
      "Password": "YourEmailPassword"
    },
    "UploadSettings": {
      "PublicKey": "your-public-key",
      "PrivateKey": "your-private-key",
      "UrlEndpoint": "https://ik.imagekit.io/your-url-endpoint/"
    }
  }
}
