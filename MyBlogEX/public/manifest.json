{
  "manifest_version": 3,
  "name": "My Blog Extension",
  "version": "1.0.0",
  "description": "Tiện ích quản lý bài viết Blog",
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.png",
      "32": "favicon.png",
      "128": "favicon.png"
    },
    "default_title": "My Blog Extension"
  },
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:5250/*"]
}
